@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
    Layout = "/Views/Shared/_Layout";
}

<div class="container">
    <div class="row">
        <div class="col s12 m6 offset-m3">
            <form method="post" class="form-horizontal">
                <div asp-asp-validation-summary="All" class="text-danger"></div>
                <input asp-for="Input.Code" type="hidden" />
                <div class="row">
                    <div class="input-field col s12">
                        <input asp-for="Input.Email" type="email" class="validate" />
                        <label asp-for="Input.Email">
                            Email
                        </label>
                        <span class="helper-text" data-error="wrong" data-success="right"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input asp-for="Input.Password" type="password" class="validate" />
                        <label asp-for="Input.Password">
                            Password
                        </label>
                        <span class="helper-text" data-error="wrong" data-success="right"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input asp-for="Input.ConfirmPassword" type="password" class="validate" />
                        <label asp-for="Input.ConfirmPassword">
                           Confirm Password
                        </label>
                        <span class="helper-text" data-error="wrong" data-success="right"></span>
                    </div>
                </div>
                <div class="row center">
                    <button class="btn waves-effect waves-light" type="submit">
                        Submit
                        <i class="material-icons right">Reset</i>
                    </button>
                </div>
                <div class="row center">
                    <a asp-action="ForgotPassword">Forgot your password?</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
